---
import SectionHeader from './SectionHeader.astro';
import SkillIcon from './SkillIcon.astro';
import { skills } from '@/data/portfolio';
import type { Language } from '@/i18n/utils';

interface Props {
  lang: Language;
  t: Record<string, any>;
}

const { t } = Astro.props;
const skillsT = t.skills as Record<string, string>;
---

<section id="skills" class="section-spacing">
  <div class="max-w-4xl mx-auto px-6 sm:px-8">
    <SectionHeader title={skillsT.title} subtitle={skillsT.subtitle} />

    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-8 mt-14">
      {skills.map((skill, i) => (
        <div
          class="flex flex-col items-center gap-3 group"
          data-animate
          data-delay={String(i * 60)}
        >
          <div class="w-10 h-10 text-text-secondary group-hover:text-accent transition-colors">
            <SkillIcon icon={skill.icon} class="w-full h-full" />
          </div>
          <span class="text-xs text-text-muted group-hover:text-text-secondary transition-colors text-center">
            {skill.name}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
