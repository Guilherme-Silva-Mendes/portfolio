---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center" data-animate>
  <h2 class="text-2xl md:text-3xl font-semibold text-text-primary">{title}</h2>
  {subtitle && <p class="text-text-secondary mt-3 max-w-lg mx-auto text-base leading-relaxed">{subtitle}</p>}
</div>
