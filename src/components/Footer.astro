---
import { personalInfo } from '@/data/portfolio';
import type { Language } from '@/i18n/utils';

interface Props {
  lang: Language;
  t: Record<string, any>;
}

const { t } = Astro.props;
const footer = t.footer as Record<string, string>;
const nav = t.nav as Record<string, string>;
const year = new Date().getFullYear();
---

<footer class="py-12 border-t border-border">
  <div class="section-container">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <p class="text-sm text-text-muted font-medium">{personalInfo.name}</p>

      <nav class="flex flex-wrap justify-center gap-6">
        <a href="#about" class="text-sm text-text-muted hover:text-accent transition-colors">{nav.about}</a>
        <a href="#projects" class="text-sm text-text-muted hover:text-accent transition-colors">{nav.projects}</a>
        <a href="#contact" class="text-sm text-text-muted hover:text-accent transition-colors">{nav.contact}</a>
      </nav>

      <p class="text-sm text-text-muted">
        &copy; {year} {footer.rights}
      </p>
    </div>
  </div>
</footer>
